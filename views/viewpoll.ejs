<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <title>View Poll</title>
  </head>
  <body>
    <a href="/">Home</a>
    <a href="/createteam">Create Team</a>
    <a href="/createdpolls">My Polls</a>
    <a href="/logout">Logout</a>
    <br>
    <a href='/createpoll/<%= teamname %>'>Create Poll</a>
    <a href='/addmember/<%= teamname %>'>Add Member</a>
    <a href='/addadmin/<%= teamname %>'>Add Admin</a>
    <h1><%= teamname %></h1>
    <h1>View Poll</h1>
    <% for(let i=0; i<docs.length; i++) { %>
      <h2><%= docs[i].question %></h2>
      <% for(let j=0; j<docs[i].options.length; j++) { %>
        <p><%= docs[i].options[j].option %></p>
      <% } %>
    <% } %>
  </body>
</html>
